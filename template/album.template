		{{end}}
	</div>
	
	<script>
window.onload = function() {
	var container = document.querySelector('#container');
	var msnry = new Masonry( container, {
	  itemSelector: '.item',
	  columnWidth: 50
	});
};
	</script>
</body>
</html>
